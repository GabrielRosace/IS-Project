<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creazione_date_evetno_ricorrente">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_data_event_ric"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Creazione evento ricorrente"
        app:titleTextColor="#FDFDFD" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:text="Evento che si ripete ogni:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_data_event_ric" />

    <Spinner
        android:id="@+id/spinnerCadenzaEvento"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:entries="@array/cadenza"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_data_event_ric"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/titleStartDate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="25dp"
        android:text="Seleziona la data di inizio"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frequenceNumber" />

    <Button
        android:id="@+id/startDateEventRic"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:onClick="openDateStartPicker"
        android:text="seleziona una data "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleStartDate" />

    <CheckBox
        android:id="@+id/checkSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Sab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkLun" />

    <CheckBox
        android:id="@+id/checkDom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Dom"
        app:layout_constraintStart_toEndOf="@+id/checkSab"
        app:layout_constraintTop_toBottomOf="@+id/checkLun" />

    <Button
        android:id="@+id/createEventRicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="createEvent"
        android:text="crea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titleDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Seleziona i giorni"
        android:textColor="#020202"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <CheckBox
        android:id="@+id/checkVen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Ven"
        app:layout_constraintStart_toEndOf="@+id/checkGio"
        app:layout_constraintTop_toBottomOf="@+id/titleDay" />

    <CheckBox
        android:id="@+id/checkLun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Lun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleDay" />

    <CheckBox
        android:id="@+id/checkMar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Mar"
        app:layout_constraintStart_toEndOf="@+id/checkLun"
        app:layout_constraintTop_toBottomOf="@+id/titleDay" />

    <CheckBox
        android:id="@+id/checkMer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Mer"
        app:layout_constraintStart_toEndOf="@+id/checkMar"
        app:layout_constraintTop_toBottomOf="@+id/titleDay" />

    <CheckBox
        android:id="@+id/checkGio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Gio"
        app:layout_constraintStart_toEndOf="@+id/checkMer"
        app:layout_constraintTop_toBottomOf="@+id/titleDay" />

    <TextView
        android:id="@+id/titleFrequenceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Nuemro di settimane"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkSab" />

    <EditText
        android:id="@+id/frequenceNumber"
        android:layout_width="98dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/titleFrequenceNumber"
        app:layout_constraintTop_toBottomOf="@+id/checkDom" />

    <TextView
        android:id="@+id/viewDatesMonthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateEventRic" />

    <TextView
        android:id="@+id/nb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:text="N.B: per eliminare una data selezionarla nuovamente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDatesMonthly" />

</androidx.constraintlayout.widget.ConstraintLayout>